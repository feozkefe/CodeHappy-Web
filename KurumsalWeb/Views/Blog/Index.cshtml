@model IEnumerable<KurumsalWeb.Models.Model.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout .cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>

<h2>Blog History</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<table class="table " id="myTable">
    <thead>
        <tr>
            <th>Blog Name</th>
            <th>Category</th>
            <th>ImageURL</th>
            <th>Edits</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogName</td>
                <td>@item.Category.CategoryName</td>
                <td><img src="@item.ImageURL" width="100" height="100" /></td>
                <td><a href="/Blog/Edit/@item.BlogID">Edit</a> | <a href="/Blog/Delete/@item.BlogID">Delete</a></td>
            </tr>
        }


    </tbody>
</table>



